# Databricks Environment Configuration
# Copy this file to .env and fill in your Databricks workspace details

# Databricks Workspace Configuration
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=your-personal-access-token

# Databricks Compute Configuration
DATABRICKS_CLUSTER_ID=your-cluster-id
DATABRICKS_WAREHOUSE_ID=your-warehouse-id

# Data Configuration
DATABRICKS_CATALOG=credit_risk
DATABRICKS_SCHEMA=default
UNITY_CATALOG_ENABLED=true

# MLflow Configuration (automatically configured in Databricks)
# MLFLOW_TRACKING_URI=databricks
# MLFLOW_REGISTRY_URI=databricks-uc

# Local Development Settings
LOCAL_DATA_PATH=data/Sample_data2.csv
ENABLE_FALLBACK_CSV=true

# Logging Configuration
LOG_LEVEL=INFO
DATABRICKS_LOG_LEVEL=INFO
